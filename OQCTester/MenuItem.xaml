<UserControl x:Class="OQCTester.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OQCTester"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <DockPanel HorizontalAlignment="Center" Cursor="Hand">
        <Grid Width="100" Height="100" DockPanel.Dock="Top">
            <Ellipse Width="80" Height="80" Fill="{Binding Color}" DockPanel.Dock="Top"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding ShortName}" TextAlignment="Center" VerticalAlignment="Center" FontSize="36" Foreground="White"/>
        </Grid>
        <Label HorizontalAlignment="Center" Content="{Binding FullName}"/>

            
    </DockPanel>
</UserControl>
